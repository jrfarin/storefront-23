<!-- Modal filters -->
<section class="modal fade" id="filtersModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content"> 
            <div class="modal-header border-0 pb-2">
                <h5 class="modal-title fw-bold" id="filtersModalLabel">Filtros</h5>
                <button type="button" class="btn-close text-color opacity-75" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body px-4">
                <!-- Only Venca -->
                <div class="row">
                    <div class="col-12 mb-2">
                        {{> _OnlyVencaFilters}}
                    </div>
                </div>

                <!-- Filters -->
                <div class="row">
                    <div class="col-12 mb-2">                                 
                        <div class="accordion accordion-flush" id="accordionFilters">
                            
                            <!-- Product Type -->
                            <div id="productTypeFilter" class="accordion-item">
                                <div class="accordion-header" id="headingProductType">
                                    <button class="accordion-button collapsed text-color fs-085-rem fw-bold bg-white shadow-none px-0 pb-0" type="button" data-bs-toggle="collapse" data-bs-target="#filterProductType" aria-expanded="false" aria-controls="filterProductType">Tipo de producto</button>
                                    <ul class="selectedFilters text-truncate ps-0 pe-4 mb-2">
                                        <li class="d-inline fs-075-rem fw-bold opacity-50 mt-1 mb-3 me-1">ALPARGATAS</li>
                                        <li class="d-inline fs-075-rem fw-bold opacity-50 mt-1 mb-3 me-1">BODIES</li>
                                    </ul>  
                                </div>
                                <div id="filterProductType" class="accordion-collapse collapse" aria-labelledby="headingProductType" data-bs-parent="#accordionFilters">
                                    <div class="accordion-body py-0 ps-1">
                                        {{> _ProductTypeFilters }}
                                    </div>
                                </div>
                            </div>

                            <!-- Sizes -->
                            <div id="sizeFilter" class="accordion-item">
                                <h2 class="accordion-header" id="headingSizes">
                                    <button class="accordion-button collapsed text-color fs-085-rem fw-bold bg-white shadow-none px-0" type="button" data-bs-toggle="collapse" data-bs-target="#filterSizes" aria-expanded="false" aria-controls="filterSizes">Talla</button>
                                </h2>
                                <div id="filterSizes" class="accordion-collapse collapse" aria-labelledby="headingSizes" data-bs-parent="#accordionFilters">
                                    <div class="accordion-body py-0 ps-1">
                                        {{> _SizeFilters }}
                                    </div>
                                </div>
                            </div>

                            <!-- Color -->
                            <div id="colorFilter" class="accordion-item">
                                <h2 class="accordion-header" id="headingColor">
                                    <button class="accordion-button collapsed text-color fs-085-rem fw-bold bg-white shadow-none px-0" type="button" data-bs-toggle="collapse" data-bs-target="#filterColor" aria-expanded="false" aria-controls="filterColor">Color</button>
                                </h2>
                                <div id="filterColor" class="accordion-collapse collapse" aria-labelledby="headingColor" data-bs-parent="#accordionFilters">
                                    <div class="accordion-body py-0 ps-1">
                                        {{> _ColorFilters }}
                                    </div>
                                </div>
                            </div>

                            <!-- Price -->
                            <div id="priceFilter" class="accordion-item">
                                <h2 class="accordion-header" id="headingPrice">
                                    <button class="accordion-button collapsed text-color fs-085-rem fw-bold bg-white shadow-none px-0" type="button" data-bs-toggle="collapse" data-bs-target="#filterPrice" aria-expanded="false" aria-controls="filterPrice">Precio</button>
                                </h2>
                                <div id="filterPrice" class="accordion-collapse collapse" aria-labelledby="headingPrice" data-bs-parent="#accordionFilters">
                                    <div class="accordion-body pt-0 ps-1">
                                        {{> _PriceFilters }}
                                    </div>
                                </div>
                            </div>

                            <!-- Features -->
                            <div id="featuresFilter" class="accordion-item">
                                <h2 class="accordion-header" id="headingFeatures">
                                    <button class="accordion-button collapsed text-color fs-085-rem fw-bold bg-white shadow-none px-0" type="button" data-bs-toggle="collapse" data-bs-target="#filterFeatures" aria-expanded="false" aria-controls="filterFeatures">Caracter√≠sticas</button>
                                </h2>
                                <div id="filterFeatures" class="accordion-collapse collapse" aria-labelledby="headingFeatures" data-bs-parent="#accordionFilters">
                                    <div class="accordion-body pt-0 ps-1">
                                        {{> _FeaturesFilter }}
                                    </div>
                                </div>
                            </div>

                            <!-- Brands -->
                            <div id="brandsFilter" class="accordion-item">
                                <h2 class="accordion-header" id="headingBrands">
                                    <button class="accordion-button collapsed text-color fs-085-rem fw-bold bg-white shadow-none px-0" type="button" data-bs-toggle="collapse" data-bs-target="#filterBrands" aria-expanded="false" aria-controls="filterBrands">Marcas</button>
                                </h2>
                                <div id="filterBrands" class="accordion-collapse collapse" aria-labelledby="headingBrands" data-bs-parent="#accordionFilters">
                                    <div class="accordion-body pt-0 ps-1">
                                        {{> _BrandsFilter }}
                                    </div>
                                </div>
                            </div>

                            <!-- Sort -->
                            <div id="sortFilter" class="accordion-item">
                                <h2 class="accordion-header" id="headingSort">
                                    <button class="accordion-button collapsed text-color fs-085-rem fw-bold bg-white shadow-none px-0" type="button" data-bs-toggle="collapse" data-bs-target="#filterSort" aria-expanded="false" aria-controls="filterBrands">Ordenar</button>
                                </h2>
                                <div id="filterSort" class="accordion-collapse collapse" aria-labelledby="headingSort" data-bs-parent="#accordionFilters">
                                    <div class="accordion-body pt-0 ps-0">
                                        {{> _SortBy }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer Buttons -->
            {{> _ClearApply }}
        </div>
    </div>
</section>